@inject UnidadesAdministrativasService servicio
@model Unidadadministrativa
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <div class="lbl ">
        <label>Unidades administrativas</label>
        <a href="#" aria-label="Cerrar sesión" class="logout hint--left">............</a>
    </div>
</header>

<main>
    <form method="post" asp-action="Agregar">
        <div class="divmain">
            <label>Clave:</label>
            <input required asp-for="Clave" type="number" maxlength="4" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />
            <label>Nombre:</label>
            <input required asp-for="Nombre" type="text" />
            <label>Encargado:</label>
            <input required asp-for="Encargado" type="text" />
            <label>Superior:</label>
            <select asp-for="IdUnidadSuperior" asp-items="@(new SelectList(servicio.GetSuperiores(),"Id","Nombre"))">
                <option selected="selected" value="">-- Seleccionar superior --</option>
            </select>
            @Html.AntiForgeryToken()
            <div class="botones">
                <p id="errores">
                    @Html.ValidationSummary()
                </p>
            </div>
        </div>
        <div class="fabsMain">
            <button type="submit" id="btnGuardar" class="material-icons fab-button  hint--left" aria-label="Guardar">save</button>
            <a href="~/UnidadesAdministrativas" class="material-icons fab-button hint--left" aria-label="Cancelar">clear</a>
        </div>
    </form>
</main>
<script src="~/scripts/disabledbutton.js"></script>